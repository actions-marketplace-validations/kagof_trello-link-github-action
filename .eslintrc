{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "rules":{
    "semi":"error",
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "no-trailing-spaces":"error",
    "comma-dangle":["error", "always-multiline"]
  },
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 2015
  }
}
